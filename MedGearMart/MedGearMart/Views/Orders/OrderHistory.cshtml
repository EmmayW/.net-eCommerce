@model List<MedGearMart.Models.DomainModel.Order>

<div class="container">
    <div class="py-5 text-center">
        <h2>Order History</h2>
        <p class="lead">Here you can view all your past orders.</p>
    </div>

    @if (!Model.Any())
    {
        <p>You have no orders yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.OrderTime.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>@order.OrderStatus</td>
                            <td>@order.OrderTotal.ToString("C")</td>
                            <td>
                                <a asp-controller="Orders" asp-action="OrderHistoryDetail" asp-route-orderId="@order.OrderId" class="btn btn-primary">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
